<div class="pagination">
<% if @offset %>
  <%= link_to("prev #{@limit}", url_for(:offset => @offset - 500, :order => params[:order], :q => params[:q])) if @offset >= @limit  %> 
  <% if @more == @limit && @offset >= @limit %>
    :
  <% end %>
  <%= link_to("next #{@more}", url_for(:offset => @offset + 500, :order => params[:order], :q => params[:q])) if @more == @limit %> 
(<%= @total || @tracks.size %> tracks total)
<% elsif params[:q] %>
  <%= pluralize(@tracks.size, "result") %>
<% end %>
</div>

